    <atom:title>Wiki Markup Help</atom:title>
    <atom:content type="xhtml">
        <div xmlns="http://www.w3.org/1999/xhtml">
            <h2>Headings</h2>
            <ul>
                <li>
                    <code>=Heading1=</code>
                </li>
                <li>
                    <code>==Heading2==</code>
                </li>
                <li>
                    <code>===Heading3===</code>
                </li>
            </ul>
            <h2>Inline</h2>
            <ul>
                <li>
                    <code>**</code>
                    <span class="strong">strong</span>
                    <code>**</code>
                </li>
                <li>
                    <code>__</code>
                    <em>emphasis</em>
                    <code>__</code>
                </li>
                <li>
                    <code>$$</code>
                    <code>code</code>
                    <code>$$</code>
                </li>
                <li>
                    <code>^^</code>
                    <sup>superscript</sup>
                    <code>^^</code>
                </li>
                <li>
                    <code>~~</code>
                    <sub>subscript</sub>
                    <code>~~</code>
                </li>
            </ul>
            <h2>Blocks</h2>
            <ul>
                <li>
                    <code>* unordered list item</code>
                </li>
                <li>
                    <code>+ numbered list item</code>
                </li>
                <li>
                    <code>{{{verbatim text}}}</code>
                </li>
                <li>
                    <code>!! table !! head !!<br/>:: cell :: cell ::</code>
                </li>
                <li>
                    <code>-- horizontal line</code>
                </li>
                <li>
                    <code>Q: quoted block</code>
                </li>
                <li>
                    <code>&gt; a quoted line</code>
                </li>
                <li>
                    <code>{{style='background-color: red'}}block</code>
                </li>
            </ul>
            <h2>Links</h2>
            <ul>
                <li>
                    <code>http://external.link/</code>
                </li>
                <li>
                    <code>[URL | label]</code>
                </li>
                <li>
                    <code>[/internal/path | label]</code>
                </li>
            </ul>
            <h2>Macros</h2>
            <ul>
                <li>
                    <code>$image(src=path float=left|right)</code>
                </li>
                <li>
                    <code>{code lang="XQuery"} code block {/code}</code>
                </li>
                <li>
                    <code>{script} inline XQuery block {/script}</code>
                </li>
            </ul>
        </div>
    </atom:content>
